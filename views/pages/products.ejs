<% include ../partials/header %>
<h1>Products List</h1>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
            <th><a name="" id="" class="btn btn-success" href="/insert" role="button">Add New</a></th>
        </tr>
    </thead>
    <tbody id="myTable">
        <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a class="btn btn-warning" href="/products/<%= product.id %>" role="button">Edit</a></td>
            <td><a class="btn btn-danger" href="/product_delete/<%= product.id %>" onclick="return confirm('Are You Sure You Want To Delete ?')" role="button">Delete</a></td>
        </tr>
        <% }); %> 
    </tbody>
</table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>





