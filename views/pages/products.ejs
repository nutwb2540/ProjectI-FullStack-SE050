<% include ../partials/header %>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th>Edit</th>
            <th><a name="" id="" class="btn btn-success" href="/insert" role="button">Add New</a></th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
        <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td><a class="btn btn-warning" href="/products/<%= product.id %>" role="button">Edit</a></td>
            <td><a class="btn btn-danger" href="/product_delete/<%= product.id %>" role="button">Delete</a></td>
        </tr>
        <% }); %> 
    </tbody id="myTable">
</table>






<% include ../partials/footer %>